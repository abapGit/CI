{
  "global": {
    "files": "/src/**/*.*",
    "skipGeneratedGatewayClasses": true,
    "skipGeneratedPersistentClasses": true,
    "skipGeneratedFunctionGroups": true
  },
  "dependencies": [
    {
      "url": "https://github.com/abaplint/deps",
      "folder": "/deps",
      "files": "/src/**/*.*"
    }
  ],
  "syntax": {
    "version": "v750",
    "errorNamespace": "^(Z|Y)",
    "globalConstants": [],
    "globalMacros": []
  },
  "rules": {
    "abapdoc": false,
    "allowed_object_naming": true,
    "allowed_object_types": true,
    "ambiguous_statement": true,
    "begin_end_names": true,
    "7bit_ascii": true,
    "avoid_use": {
      "define": false,
      "endselect": true,
      "execSQL": true,
      "break": true,
      "communication": true,
      "defaultKey": false,
      "statics": true,
      "systemCall": true,
      "kernelCall": true
    },
    "class_attribute_names": false,
    "cloud_types": true,
    "colon_missing_space": true,
    "commented_code": true,
    "contains_tab": true,
    "definitions_top": true,
    "description_empty": true,
    "double_space": true,
    "empty_line_in_statement": {
      "allowChained": true
    },
    "empty_statement": true,
    "exit_or_check": true,
    "exporting": true,
    "functional_writing": {
      "ignoreExceptions": true
    },
    "global_class": true,
    "identical_form_names": true,
    "if_in_if": true,
    "indentation": true,
    "inline_data_old_versions": true,
    "line_length": true,
    "line_only_punc": {
      "ignoreExceptions": true
    },
    "local_class_naming": true,
    "local_variable_names": true,
    "max_one_statement": true,
    "message_exists": false,
    "method_length": true,
    "method_parameter_names": {
      "ignoreExceptions": true,
      "importing": "^I._.*$",
      "returning": "^R._.*$",
      "changing": "^C._.*$",
      "exporting": "^E._.*$",
      "ignoreNames": [
        "P_TASK"
      ]
    },
    "mix_returning": true,
    "msag_consistency": true,
    "nesting": {
      "depth": 5
    },
    "no_public_attributes": {
      "exclude": [],
      "reason": "",
      "allowReadOnly": true
    },
    "object_naming": {
      "clas": "^ZC(L|X)\\_ABAPGIT\\_",
      "intf": "^ZIF\\_ABAPGIT\\_",
      "prog": "^ZABAPGIT",
      "fugr": "^ZABAPGIT",
      "tabl": "^Z",
      "ttyp": "^Z",
      "dtel": "^Z",
      "doma": "^Z",
      "msag": "^Z",
      "tran": "^Z",
      "enqu": "^Z",
      "idoc": "^Z",
      "ssfo": "^Z",
      "ssst": "^Z",
      "xslt": "^Z",
      "auth": "^Z",
      "pinf": "^Z"
    },
    "obsolete_statement": {
      "refresh": true,
      "compute": true,
      "add": true,
      "subtract": true,
      "occurs": true,
      "setExtended": true,
      "multiply": true,
      "move": true,
      "divide": true,
      "requested": true
    },
    "parser_error": true,
    "remove_descriptions": {
      "ignoreExceptions": true
    },
    "sequential_blank": {
      "lines": 4
    },
    "short_case": {
      "length": 1,
      "allow": ["iv_action", "sy"]
    },
    "space_before_colon": true,
    "start_at_tab": true,
    "superclass_final": true,
    "tabl_enhancement_category": true,
    "when_others_last": true,
    "whitespace_end": true
  }
}
