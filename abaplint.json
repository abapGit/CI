{
  "global": {
    "files": "/src/**/*.*",
    "skipGeneratedGatewayClasses": true,
    "skipGeneratedPersistentClasses": true,
    "skipGeneratedFunctionGroups": true
  },
  "dependencies": [
    {
      "url": "https://github.com/abaplint/deps",
      "folder": "/deps1",
      "files": "/src/**/*.*"
    },
    {
      "url": "https://github.com/abapGit/abapGit",
      "folder": "/deps2",
      "files": "/src/**/*.*"
    }
  ],
  "syntax": {
    "version": "v750",
    "errorNamespace": "^(Z|Y)",
    "globalConstants": [],
    "globalMacros": []
  },
  "rules": {
    "dangerous_statement": false,
    "db_operation_in_loop": false,
    "max_one_method_parameter_per_line": true,
    "modify_only_own_db_tables": {
      "ownTables": "^[tadir|y|z]"
    },
    "no_yoda_conditions": true,
    "prefer_raise_exception_new": true,
    "select_add_order_by": true,
    "select_performance": false,
    "unsecure_fae": true,
    "use_class_based_exceptions": true,
    "identical_descriptions": true,
    "intf_referencing_clas": true,
    "method_implemented_twice": true,
    "parser_702_chaining": true,
    "uncaught_exception": true,
    "begin_single_include": true,
    "call_transaction_authority_check": true,
    "check_subrc": false,
    "cyclomatic_complexity": true,
    "forbidden_pseudo_and_pragma": false,
    "function_module_recommendations": false,
    "identical_conditions": true,
    "identical_contents": false,
    "line_break_style": false,
    "many_parentheses": true,
    "unused_ddic": true,
    "method_overwrites_builtin": true,
    "names_no_dash": true,
    "omit_parameter_name": false,
    "omit_receiving": true,
    "parser_missing_space": true,
    "prefer_is_not": true,
    "prefer_xsdbool": false,
    "reduce_string_templates": true,
    "sy_modification": true,
    "unused_methods": false,
    "unused_types": true,
    "use_bool_expression": true,
    "use_line_exists": false,
    "abapdoc": false,
    "allowed_object_naming": true,
    "allowed_object_types": true,
    "ambiguous_statement": true,
    "begin_end_names": true,
    "chain_mainly_declarations": true,
    "check_abstract": true,
    "check_comments": false,
    "check_ddic": true,
    "check_include": true,
    "check_no_handler_pragma": true,
    "check_syntax": false,
    "check_text_elements": true,
    "check_transformation_exists": true,
    "constructor_visibility_public": true,
    "downport": false,
    "empty_structure": true,
    "forbidden_identifier": true,
    "forbidden_void_type": true,
    "form_tables_obsolete": true,
    "fully_type_constants": true,
    "implement_methods": true,
    "in_statement_indentation": false,
    "keep_single_parameter_on_one_line": false,
    "keyword_case": true,
    "line_break_multiple_parameters": false,
    "local_testclass_location": true,
    "main_file_contents": true,
    "newline_between_methods": true,
    "prefer_inline": false,
    "prefer_returning_to_exporting": true,
    "preferred_compare_operator": false,
    "prefix_is_current_class": true,
    "release_idoc": true,
    "rfc_error_handling": false,
    "selection_screen_naming": false,
    "sicf_consistency": true,
    "space_before_dot": true,
    "sql_escape_host_variables": true,
    "try_without_catch": true,
    "type_form_parameters": true,
    "types_naming": false,
    "unknown_types": false,
    "unreachable_code": true,
    "unused_variables": false,
    "use_new": false,
    "xml_consistency": true,
    "7bit_ascii": true,
    "avoid_use": {
      "define": false,
      "break": true,
      "defaultKey": false,
      "statics": true,
      "describeLines": false
    },
    "class_attribute_names": false,
    "cloud_types": true,
    "colon_missing_space": true,
    "commented_code": true,
    "contains_tab": true,
    "definitions_top": true,
    "description_empty": true,
    "double_space": true,
    "empty_line_in_statement": {
      "allowChained": true
    },
    "empty_statement": true,
    "exit_or_check": true,
    "exporting": true,
    "functional_writing": {
      "ignoreExceptions": true
    },
    "global_class": true,
    "identical_form_names": true,
    "if_in_if": true,
    "indentation": {
       "ignoreExceptions": true,
       "alignTryCatch": false,
       "selectionScreenBlockIndentation": true,
       "globalClassSkipFirst": false,
       "ignoreGlobalClassDefinition": false,
       "ignoreGlobalInterface": false
    },
    "inline_data_old_versions": true,
    "line_length": true,
    "line_only_punc": {
      "ignoreExceptions": true
    },
    "local_class_naming": true,
    "local_variable_names": false,
    "max_one_statement": true,
    "message_exists": true,
    "method_length": true,
    "method_parameter_names": {
      "ignoreExceptions": true,
      "importing": "^I._.*$",
      "returning": "^R._.*$",
      "changing": "^C._.*$",
      "exporting": "^E._.*$",
      "ignoreNames": [
        "P_TASK"
      ]
    },
    "mix_returning": true,
    "msag_consistency": true,
    "nesting": {
      "depth": 5
    },
    "no_public_attributes": {
      "allowReadOnly": true
    },
    "object_naming": {
      "clas": "^ZC(L|X)\\_ABAPGIT\\_",
      "intf": "^ZIF\\_ABAPGIT\\_",
      "prog": "^ZABAPGIT",
      "fugr": "^ZABAPGIT",
      "tabl": "^Z",
      "ttyp": "^Z",
      "dtel": "^Z",
      "doma": "^Z",
      "msag": "^Z",
      "shlp": "^Z",
      "tran": "^Z",
      "enqu": "^Z",
      "idoc": "^Z",
      "ssfo": "^Z",
      "ssst": "^Z",
      "xslt": "^Z",
      "auth": "^Z",
      "pinf": "^Z"
    },
    "obsolete_statement": {
      "refresh": true,
      "compute": true,
      "add": true,
      "parameter": true,
      "ranges": true,
      "communication": true,
      "exitFromSQL": true,
      "freeMemory": true,
      "pack": true,
      "selectWithoutInto": true,
      "subtract": true,
      "occurs": true,
      "fieldSymbolStructure": true,
      "load": true,
      "typePools": true,
      "withHeaderLine": true,
      "setExtended": true,
      "multiply": true,
      "move": true,
      "divide": true,
      "callTransformation": true,
      "regex": true,
      "sortByFS": true,
      "requested": true
    },
    "parser_error": true,
    "remove_descriptions": {
      "ignoreExceptions": true,
      "ignoreWorkflow": true
    },
    "sequential_blank": {
      "lines": 4
    },
    "short_case": {
      "length": 1,
      "allow": ["iv_action", "sy"]
    },
    "space_before_colon": true,
    "start_at_tab": true,
    "superclass_final": true,
    "tabl_enhancement_category": true,
    "when_others_last": true,
    "whitespace_end": true
  }
}
